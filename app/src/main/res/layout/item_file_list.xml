<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_89"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_folder"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:src="@drawable/ic_file_folder_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_item_status"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/ic_folder_status_false"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_folder"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_item_folder_name"
        style="@style/textModel"
        android:gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:maxHeight="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_folder"
        tools:text="文件夹" />

    <View
        android:id="@+id/v_item_details"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/ic_file_details"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_folder_name"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>